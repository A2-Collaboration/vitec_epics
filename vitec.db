#
#  @brief EPICS record database for VITEC status values
#  @autor Oliver Steffen <steffen@kph.uni-mainz.de>
#  @date Aug 22, 2013
#  @param BOX host name of the machine taking care of the VITEC card
#  @param DEV device name. Usually "VITEC"
#

record (ai, "$(BOX):$(DEV):VP5")
{
	field (DTYP, "stream")
	field (INP, "@$(PROTO) read_VP5 $(DEV)")
	field(SCAN, "I/O Intr")
	field (DESC, "+5 Volt supply of VITEC")
	field (LINR, "LINEAR")
	field (EGU, "V")
        field (LOPR, 0)
        field (HOPR, 10)
        field (LOW, 4.75)
        field (HIGH, 5.25)
        field (LOLO, 4.5)
        field (HIHI, 5.5)
}

